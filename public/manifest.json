{
  "version": "1.0",
  "name": "nauč-se",
  "short_name": "Prekladac",
  "description" : "Vytvořil : Dominik Hradecký",
  "manifest_version": 3,

  "permissions" : 
  [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],

  "background" :
  {
    "service_worker": "background.js"
  },

  "action" :
  {
    "default_popup": "index.html"

  },
  "web_accessible_resources":
  [
    {
      "resources": ["naucse.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_scripts" : 
  [{
    "matches" : ["<all_urls>"],
    "js" : [ "content.js"]
  }]
}