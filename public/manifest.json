{
    "version": "1.0",
    "name": "nauč-se",
    "short_name": "Translator",
    "description": "Vytvořil : Dominik Hradecký",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "contextMenus",
        "alarms"
    ],

    "background":
    {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "index.html"
    },
    "host_permissions": [
        "<all_urls>",
        "https://*/*",
        "http://*/*"
    ]
}
